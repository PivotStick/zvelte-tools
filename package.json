{
	"name": "zvelte",
	"displayName": "Zvelte Language Features",
	"main": "dist/src/extension.js",
	"publisher": "zvelte",
	"icon": "icons/logo.png",
	"description": "Language supports for Zvelte",
	"version": "0.1.7",
	"engines": {
		"vscode": "^1.90.0"
	},
	"categories": [
		"Programming Languages"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/PivotStick/zvelte-tools"
	},
	"scripts": {
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"watch": "node esbuild.js --watch",
		"build": "node esbuild.js",
		"vscode:prepublish": "npm run package",
		"package": "node esbuild.js --production"
	},
	"activationEvents": [
		"onLanguage:zvelte"
	],
	"devDependencies": {
		"@types/node": "^20.5.7",
		"esbuild": "^0.23.0",
		"typescript": "^5.2.2"
	},
	"contributes": {
		"configuration": {},
		"languages": [
			{
				"id": "zvelte",
				"aliases": [
					"Zvelte",
					"zvelte"
				],
				"extensions": [
					".zvelte"
				],
				"icon": {
					"dark": "./icons/logo.png",
					"light": "./icons/logo.png"
				},
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "zvelte",
				"scopeName": "source.zvelte",
				"path": "./syntaxes/zvelte.tmLanguage.json",
				"injectTo": [
					"./syntaxes/zvelte.tmLanguage.json"
				],
				"embeddedLanguages": {
					"source.css": "css",
					"source.css.scss": "scss",
					"source.js": "javascript",
					"source.ts": "typescript"
				}
			}
		],
		"snippets": [
			{
				"language": "zvelte",
				"path": "./snippets/zvelte.json"
			}
		]
	}
}
