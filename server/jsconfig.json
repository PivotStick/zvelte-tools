{
  "compilerOptions": {
      "module": "NodeNext",
      "lib": ["esnext", "dom", "dom.iterable"],
      "target": "esnext",
      "noEmit": true,
      "moduleResolution": "NodeNext",
      "resolveJsonModule": true,
      "noEmitOnError": true,
      "noErrorTruncation": true,
      "allowSyntheticDefaultImports": true,
      "verbatimModuleSyntax": true,
      "types": ["node"],
      "strict": true,
      "allowJs": true,
      "checkJs": true
  }
}
